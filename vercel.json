{
    "rewrites": [
        {
            "source": "/",
            "destination": "/templates/index.html"
        },
        {
            "source": "/(.*).html",
            "destination": "/templates/$1.html"
        }
    ],
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "Cache-Control",
                    "value": "public, max-age=0, must-revalidate"
                }
            ]
        }
    ]
}